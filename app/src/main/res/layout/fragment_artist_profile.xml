<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/dark_mode"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_account"
        android:layout_width="wrap_content"
        android:text="Account"
        android:layout_margin="15dp"
        android:textSize="40dp"
        android:textColor="@color/paletteWhite"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/title_account">

        <ImageView
            android:id="@+id/singer_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
        <Button
            android:id="@+id/changePhoto_btn"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_below="@id/singer_image"
            android:background="@drawable/log_in_button"
            android:textColor="@color/darkGrey"
            android:textSize="14dp"
            android:fontFamily="@font/gotham_book"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Change photo"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/changePhoto_btn">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginStart="20dp"
                    android:id="@+id/tv_email_name"
                    android:layout_marginTop="40dp"
                    android:text="Email"
                    android:textSize="30dp"

                    android:fontFamily="@font/gotham_book"
                    android:textColor="@color/paletteWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_marginStart="20dp"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/gotham_book"
                    android:textColor="@color/paletteWhite"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_email_name"
                    android:layout_width="330dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:id="@+id/tv_name_user"
                    android:text="Name"
                    android:layout_below="@+id/tv_email"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/gotham_book"
                    android:textSize="30dp"
                    android:textColor="@color/paletteWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/activity_player_tv_song_name"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/paletteWhite"
                    android:fontFamily="@font/gotham_book"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/darkGrey"
                    android:layout_below="@+id/tv_name_user"
                    android:layout_width="330dp"
                    android:layout_height="35dp"/>
                <Button
                    android:id="@+id/btn_save_data"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_player_tv_song_name"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/log_in_button"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/darkGrey"
                    android:fontFamily="@font/gotham_book"
                    android:text="SAVE DATA"/>
                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_save_data"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/log_in_button"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/darkGrey"
                    android:fontFamily="@font/gotham_book"
                    android:text="Log out"/>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>


